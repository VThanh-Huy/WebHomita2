@model IEnumerable<Homita.Models.SanPham>

@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="search section-padding">
    <div class="container">
        <!-- Hiển thị sản phẩm -->
        <div class="row mt-4">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-12 col-md-6 col-lg-3 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="@Url.Content("~/Content/images/" + item.HinhAnh)" alt="Ảnh sản phẩm" style="max-width:100px; max-height:100px; object-fit:contain;" />

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@item.TenSP</h5>
                                <p class="card-text mb-1"><strong>Mã:</strong> @item.MaSP</p>
                                <p class="card-text text-danger"><strong>Giá:</strong> @String.Format("{0:N0} ₫", item.Gia)</p>
                            </div>

                            <div class="card-footer text-center">
                                @if (Session["TaiKhoan"] != null)
                                {
                                    <a href="@Url.Action("AddCart", "Cart", new { maSP = item.MaSP, returnUrl = Request.RawUrl })" class="btn btn-primary">Thêm vào giỏ hàng</a>
                                }
                                else
                                {
                                    // Gợi ý: Redirect đến trang đăng nhập có lưu ReturnUrl để quay lại
                                    <a href="@Url.Action("Login", "Account", new { returnUrl = Request.Url.ToString() })"
                                       class="btn btn-warning btn-sm">
                                        <i class="fa fa-sign-in-alt"></i> Đăng nhập để mua
                                    </a>
                                }

                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-danger">Không có sản phẩm nào để hiển thị.</p>
                </div>
            }
        </div>
    </div>
</section>
