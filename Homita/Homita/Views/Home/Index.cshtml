<script>
    $(document).ready(function () {
        // Khi click dot, chuyển slide
        $('.owl-dots button').on('click', function () {
            var slideTo = $(this).data('bs-slide-to');
            $('#bannerCarousel').carousel(slideTo);
        });

        // Khi chuyển slide, cập nhật class active cho dot
        $('#bannerCarousel').on('slid.bs.carousel', function () {
            // Lấy index của .carousel-item.active
            var index = $('#bannerCarousel .carousel-item.active').index();
            $('.owl-dots button').removeClass('active');
            $('.owl-dots button').eq(index).addClass('active');
        });
    });
</script>