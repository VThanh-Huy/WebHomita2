<style>
    #bannerCarousel {
        width: 100vw;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
    }

    .carousel img {
        width: 100%;
        height: 50vh
    }

    .owl-dots {
        display: flex;
        justify-content: flex-start;
        gap: 12px;
        margin-top: 12px;
        margin-left: 90px;
    }

        .owl-dots button {
            background: #198754; /* Bootstrap xanh lá */
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            transition: background 0.2s, box-shadow 0.2s;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            outline: none;
            cursor: pointer;
            padding: 0;
        }

            .owl-dots button.active, .owl-dots button:focus {
                background: #157347;
                box-shadow: 0 0 0 3px #b6f0d1;
            }

    .dot-border {
        display: none;
    }

    .dot-number {
        color: #fff;
        font-weight: bold;
        font-size: 1rem;
        width: 100%;
        text-align: center;
        line-height: 36px;
        letter-spacing: 1px;
    }
    /* Nút xanh lá custom */
    .custom-green-btn {
        background: #198754 !important;
        color: #eaffd0 !important;
        border: 2px solid #b6f0d1 !important;
        transition: color 0.2s, border-color 0.2s;
        position: relative;
        overflow: hidden;
    }

        .custom-green-btn::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 0;
            height: 100%;
            background: #f2f2f2;
            z-index: 1;
            transition: width 0.35s cubic-bezier(.4,0,.2,1);
        }

        .custom-green-btn:hover, .custom-green-btn:focus {
            color: #198754 !important;
            border-color: #198754 !important;
        }

            .custom-green-btn:hover::before, .custom-green-btn:focus::before {
                width: 100%;
            }

        .custom-green-btn span {
            position: relative;
            z-index: 2;
            transition: color 0.2s;
        }

    .menu {
        color: #116333;
        font-size: 40px;
        line-height: 1.2;
        margin: 0 0 30px;
        text-transform: uppercase;
        position: relative;
        display: inline-block;
    }

        .menu::after {
            content: "";
            display: block;
            height: 4px;
            width: 60px; /* Điều chỉnh cho vừa tới chữ E */
            background: #116333;
            border-radius: 2px;
            margin-top: 6px;
        }

    .trasua::after {
        content: "";
        display: block;
        height: 4px;
        width: 60px; /* Điều chỉnh cho vừa tới chữ E */
        background: #116333;
        border-radius: 2px;
        margin-top: 6px;
    }

    .price {
        white-space: nowrap;
    }
</style>

