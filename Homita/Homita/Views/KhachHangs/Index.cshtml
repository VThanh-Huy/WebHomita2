@model IEnumerable<Homita.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            Mã khách hàng
        </th>
        <th>
            Họ & tên
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT)
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaiKhoan.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaiKhoan.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MaKH }) |
            @Html.ActionLink("Details", "Details", new { id = item.MaKH }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MaKH })
        </td>
    </tr>
}

</table>
