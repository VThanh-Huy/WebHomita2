<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Quản trị Homita</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-dark bg-dark p-3 mb-3">
            <span class="navbar-brand">Trang Quản Trị</span>
            <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-light">Đăng xuất</a>
        </nav>

        <div class="row">
            <div class="col-2 bg-light border-end ">
                <ul class="nav flex-column mt-3">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "AdminHome")">Trang chính</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "NhanViens")">Quản lý nhân viên</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "TaiKhoans")">Quản lý tài khoản</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "SanPhams")">Quản lý Sản phẩm</a>
                    </li>
                </ul>
            </div>

            <div class="col-10 p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>


