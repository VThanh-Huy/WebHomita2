<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Quản trị Homita</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body {
            /*            background: linear-gradient(135deg, #eaffd0 0%, #f2f2f2 100%);*/
            /* hoặc dùng ảnh nền: */
            background: url('/Content/images/leaf-bg.png') no-repeat center center fixed;
            background-size: cover;
        }

        .navbar {
            background-color: #211E1E !important;
        }
        /* --- NAVBAR MENU STYLE & EFFECTS --- */
        .nav .nav-link {
            transition: color 0.2s; /* Hiệu ứng chuyển màu chữ khi hover/active */
            font-weight: 800; /* Chữ đậm hơn */
            font-size: 1rem; /* Chữ to hơn mặc định */
            margin: 0 10px; /* Khoảng cách đều giữa các mục menu */
            position: relative; /* Để tạo hiệu ứng gạch chân bằng ::after */
        }
            /* Gạch chân xanh lá xuất hiện khi hover/focus/active */
            .nav .nav-link::after {
                content: '';
                display: block;
                position: absolute;
                left: 50%; /* Bắt đầu từ giữa */
                bottom: 0; /* Sát chân chữ */
                width: 0; /* Ẩn khi chưa hover/active */
                height: 2.5px; /* Độ dày gạch chân */
                background: #83c343; /* Màu xanh lá */
                transition: width 0.3s cubic-bezier(.4,0,.2,1), left 0.3s cubic-bezier(.4,0,.2,1); /* Animation */
                border-radius: 2px; /* Bo tròn nhẹ gạch chân */
                transform: translateX(-50%); /* Căn giữa gạch chân */
                pointer-events: none; /* Không ảnh hưởng sự kiện chuột */
                opacity: 0; /* Ẩn khi chưa hover/active */
            }
            /* Khi hover hoặc focus vào menu */
            .nav .nav-link:hover, .nav .nav-link:focus {
                color: #0e4f29 !important; /* Đổi màu chữ sang xanh lá */
            }

                .nav .nav-link:hover::after, .nav .nav-link:focus::after {
                    width: 100%; /* Gạch chân bung ra full chiều rộng */
                    left: 50%;
                    opacity: 1; /* Hiện gạch chân */
                }
            /* Khi ở đúng trang hiện tại (active) thì luôn giữ màu xanh và gạch chân */
            .nav .nav-link.active {
                color: #0e4f29 !important;
            }

                .nav .nav-link.active::after {
                    width: 100%;
                    left: 50%;
                    opacity: 1;
                }
    </style>
</head>
<body>
    <!-- Navbar đặt ngoài container-fluid -->
    <nav class="navbar navbar-dark bg-dark p-3 w-100" style="margin:0; border-radius:0;">
        <div class="container-fluid px-0 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="~/Content/images/logo.jpg" alt="Logo" style="height:70px; width:auto; margin-right:25px;">
                <span class="navbar-brand mb-0 h1 fw-bold">Trang Quản Trị</span>
            </div>
            <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-light">Đăng xuất</a>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-2 bg-light border-end ">
                <ul class="nav flex-column mt-3">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "AdminHome")">Trang chính</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "NhanViens")">Quản lý <br />nhân viên</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "TaiKhoans")">Quản lý <br />tài khoản</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "SanPhams")">Quản lý <br />sản phẩm</a>
                    </li>
                </ul>
            </div>

            <div class="col-10 p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</body>
</html>