<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homita</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/StyleSheet1.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* --- NAVBAR MENU STYLE & EFFECTS --- */
        .navbar-nav .nav-link {
            transition: color 0.2s; /* Hiệu ứng chuyển màu chữ khi hover/active */
            font-weight: 600; /* Chữ đậm hơn */
            font-size: 1.1rem; /* Chữ to hơn mặc định */
            margin: 0 18px; /* Khoảng cách đều giữa các mục menu */
            position: relative; /* Để tạo hiệu ứng gạch chân bằng ::after */
        }
            /* Gạch chân xanh lá xuất hiện khi hover/focus/active */
            .navbar-nav .nav-link::after {
                content: '';
                display: block;
                position: absolute;
                left: 50%; /* Bắt đầu từ giữa */
                bottom: 0; /* Sát chân chữ */
                width: 0; /* Ẩn khi chưa hover/active */
                height: 2.5px; /* Độ dày gạch chân */
                background: #83c343; /* Màu xanh lá */
                transition: width 0.3s cubic-bezier(.4,0,.2,1), left 0.3s cubic-bezier(.4,0,.2,1); /* Animation */
                border-radius: 2px; /* Bo tròn nhẹ gạch chân */
                transform: translateX(-50%); /* Căn giữa gạch chân */
                pointer-events: none; /* Không ảnh hưởng sự kiện chuột */
                opacity: 0; /* Ẩn khi chưa hover/active */
            }
            /* Khi hover hoặc focus vào menu */
            .navbar-nav .nav-link:hover, .navbar-nav .nav-link:focus {
                color: #83c343 !important; /* Đổi màu chữ sang xanh lá */
            }

                .navbar-nav .nav-link:hover::after, .navbar-nav .nav-link:focus::after {
                    width: 100%; /* Gạch chân bung ra full chiều rộng */
                    left: 50%;
                    opacity: 1; /* Hiện gạch chân */
                }
            /* Khi ở đúng trang hiện tại (active) thì luôn giữ màu xanh và gạch chân */
            .navbar-nav .nav-link.active {
                color: #83c343 !important;
            }

                .navbar-nav .nav-link.active::after {
                    width: 100%;
                    left: 50%;
                    opacity: 1;
                }
        /* Hiệu ứng gạch chân xanh cho dropdown-item */
        .dropdown-menu .dropdown-item {
            position: relative;
            transition: color 0.2s;
            font-weight: 600;
        }

            .dropdown-menu .dropdown-item::after {
                content: '';
                display: block;
                position: absolute;
                left: 50%;
                bottom: 0;
                width: 0;
                height: 2.5px;
                background: #83c343;
                transition: width 0.3s cubic-bezier(.4,0,.2,1), left 0.3s cubic-bezier(.4,0,.2,1);
                border-radius: 2px;
                transform: translateX(-50%);
                pointer-events: none;
                opacity: 0;
            }

            .dropdown-menu .dropdown-item:hover,
            .dropdown-menu .dropdown-item:focus {
                color: #83c343 !important;
            }

                .dropdown-menu .dropdown-item:hover::after,
                .dropdown-menu .dropdown-item:focus::after {
                    width: 100%;
                    left: 50%;
                    opacity: 1;
                }

        .footer-custom {
            color: white;
            background: #0e4f29;
            border-top: 1px solid #e0e0e0;
        }

            .footer-custom a {
                color: #198754;
                text-decoration: none;
                transition: color 0.2s;
            }

                .footer-custom a:hover {
                    color: #116333;
                    text-decoration: underline;
                }

            .footer-custom img {
                vertical-align: middle;
            }

        body {
            /*            background: linear-gradient(135deg, #eaffd0 0%, #f2f2f2 100%);*/
            /* hoặc dùng ảnh nền: */
            background: url('/Content/images/leaf-bg.png') no-repeat center center fixed;
            background-size: cover;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg d-flex">
        <div class="container-fluid">
            <a class="navbar-brand me-5 d-flex align-items-center" href="@Url.Action("Index","Home")">
                <img src="~/Content/images/logo.jpg" alt="Logo" style="height:60px; width:auto; margin-left:100px;">
            </a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")" href="@Url.Action("Index", "Home")">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "SanPhams" ? "active" : "")" href="@Url.Action("Index", "SanPhams")">Menu</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Product", "Cart", new { id = "SP01" })" class="nav-link">Product</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("CartView", "Cart")" class="nav-link">Xem giỏ hàng</a>
                    </li>


                    @if (Session["TaiKhoan"] != null)
                    {
                        var user = (Homita.Models.TaiKhoan)Session["TaiKhoan"];
                        <div class="dropdown nav-item">
                            <a class="dropdown-toggle nav-link d-flex align-items-center" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-2"></i>
                                <span>@user.TenDangNhap</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuLink">
                                <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")">Profile</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("LogOut", "Account")">Đăng xuất</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a href="@Url.Action("Login", "Account")" class="nav-link ms-2 d-flex align-items-center ">
                                <i class="bi bi-person me-2"></i> Đăng nhập
                            </a>
                        </li>
                    }


                </ul>
                <nav class="navbar  nav-item">
                    <div class="container-fluid">
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                            <button class="btn btn-outline-light" type="submit">
                                Search
                            </button>
                        </form>
                    </div>
                </nav>
            </div>
        </div>
    </nav>
    <div class="body-content" style="padding:0; margin:0;">
        @RenderBody()

        <footer class="footer-custom mt-5 pt-4 pb-2">
            <div class="container">
                <div class="row align-items-center text-center text-md-start">
                    <!-- Logo bên trái -->
                    <div class="col-md-4 mb-3 mb-md-0 d-flex justify-content-center justify-content-md-start">
                        <img src="~/Content/images/logo1.png" alt="Logo" style="height:150px;">
                    </div>
                    <!-- Tư vấn ở giữa -->
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div>
                            <strong>Tư vấn:</strong><br>
                            Hotline: <a href="tel:0123456789">0123 456 789</a><br>
                            Email: <a href="mailto:info@homita.com">info@homita.com</a>
                        </div>
                    </div>
                    <!-- Kết nối bên phải -->
                    <div class="col-md-4 d-flex flex-column align-items-center align-items-md-end">
                        <div class="mb-2"><strong>Kết nối</strong></div>
                        <div>
                            <a href="#" class="me-2"><img src="~/Content/images/facebook.png" alt="Facebook" style="height: 35px; border-radius: 50%;"></a>
                            <a href="#" class="me-2"><img src="~/Content/images/instagram.jpg" alt="Instagram" style="height: 35px; border-radius: 50%;"></a>
                            <a href="#"><img src="~/Content/images/youtube.jpg" alt="YouTube" style="height: 35px; border-radius: 50%;"></a>
                        </div>
                    </div>
                </div>
                <hr class="my-3">
                <div class="text-center fw-bold text-white small">
                    &copy;Copyright @DateTime.Now.Year - Homita. All rights reserved.
                </div>
            </div>
        </footer>
    </div>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
    <!-- Đăng nhập -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="loginModalLabel">Đăng nhập</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    @if (TempData["LoginError"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["LoginError"]
                        </div>
                    }
                    <form method="post" action="/Account/Login">
                        <div class="mb-3">
                            <label for="loginEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="loginEmail" name="Email" required />
                        </div>
                        <div class="mb-3">
                            <label for="loginPassword" class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" id="loginPassword" name="Password" required />
                        </div>
                        <button type="submit" class="btn btn-success">Đăng nhập</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section scripts {
        <script>
        $(document).ready(function () {
            @if (TempData["ShowLoginModal"] != null && (bool)TempData["ShowLoginModal"])
            {
                <text>
                    var loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
                    loginModal.show();
                </text>
            }
        });
        </script>
    }

</body>
</html>
